#container
  =form_for @user do |f|
    #notice=notice
    %p=f.text_field :email, :placeholder => "Email Address"
    %p=f.text_field :name, :placeholder => "Full Name"
    %p=f.password_field :password, :placeholder => "Password"
    %p=f.password_field :password_confirmation, :placeholder => "Password Confirmation"
    %p=f.submit "Register"